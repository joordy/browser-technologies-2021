<body class="cartPage">
  {{> header}}

  <main>
    <!--<form action="/myCart" method="POST">
      <fieldset>    
        <label for="">Look for order</label>
        <input type="text" name="searchID">
        <input type="submit" value="searchOrder"> 
      </fieldset>  
    </form> -->

    {{#if orders }}
      <section>
        <article>
          <img src="{{orders.img}}" alt="">
        </article>

        <article>
          <div>
            <p>Order ID: {{orders.orderID}}</p>
            <p>Product ID: {{orders.productID}}</p>
            <p>Name: {{orders.name}}</p>
            <p>Type: {{orders.type}}</p>
          </div>
          <div>
            <p>Price: {{orders.price}}</p>
            <p>Size: {{orders.size}}</p>
            <p>Printed text: {{orders.print}}</p>
            <p>Color: {{orders.color}}</p>
          </div>
        </article>
      </section>

      <h2>Sign in or register</h2>

      <section>
        <form action="/create-profile" method="POST">
          <fieldset>
            <input type="hidden" name="orderID" value="{{orders.orderID}}">
            <input type="hidden" name="productID" value="{{orders.productID}}">
            <input type="hidden" name="name" value="{{orders.name}}">
            <input type="hidden" name="type" value="{{orders.type}}">
            <input type="hidden" name="cat" value="{{orders.categorie}}">
            <input type="hidden" name="price" value="{{orders.price}}">
            <input type="hidden" name="gender" value="{{orders.gender}}">
            <input type="hidden" name="size" value="{{orders.size}}">
            <input type="hidden" name="print" value="{{orders.print}}">
            <input type="hidden" name="color" value="{{orders.color}}">
            <input type="hidden" name="img" value="{{orders.img}}">

            <div>
              <label for="firstname">First name:</label>
              <input type="text" name="firstname" required>
            </div>

            <div>
              <label for="lastname">Last name:</label>
              <input type="text" name="lastname" required>
            </div>

            <div>
              <label for="email">Email:</label>
              <input type="email" name="email" required>
            </div>


            <input type="submit" value="Register and order">
          </fieldset>
        </form>
        <form action="/login-profile" method="POST">
          <fieldset>
            <input type="hidden" name="orderID" value="{{orders.orderID}}">
            <input type="hidden" name="productID" value="{{orders.productID}}">
            <input type="hidden" name="name" value="{{orders.name}}">
            <input type="hidden" name="type" value="{{orders.type}}">
            <input type="hidden" name="cat" value="{{orders.categorie}}">
            <input type="hidden" name="price" value="{{orders.price}}">
            <input type="hidden" name="gender" value="{{orders.gender}}">
            <input type="hidden" name="size" value="{{orders.size}}">
            <input type="hidden" name="print" value="{{orders.print}}">
            <input type="hidden" name="color" value="{{orders.color}}">
            <input type="hidden" name="img" value="{{orders.img}}">

            <div>
              <label for="customerID">Customer ID</label>
              <input type="text" name="customerID" required>
            </div>

            <input type="submit" value="Log in and order">
          </fieldset>
        </form>
      </section>

    {{else}}
      <section>
        <p>No products, go order your T-shirt <a href="/shop">here</a></p>      

        
        <h2>Sign in or register</h2>
  
      </section>

      <section>
        <form action="/create-profile" method="POST">
          <fieldset>
            <div>
              <label for="">First name:</label>
              <input type="text" name="firstname" required>
            </div>

            <div>
              <label for="">Last name:</label>
              <input type="text" name="lastname" required>
            </div>

            <div>
              <label for="">Email:</label>
              <input type="email" name="email" required>
            </div>


            <input type="submit" value="Register and order">
          </fieldset>
        </form>
      </section>

      <section>
        <form action="/login-profile" method="POST">
          <fieldset>
            <div>
              <label for="">Customer ID</label>
              <input type="text" name="customerID" required>
            </div>

            <input type="submit" value="Log in and order">
          </fieldset>
        </form>
      </section>
    {{/if}}



  </main>

  {{> footer}}

</body>

